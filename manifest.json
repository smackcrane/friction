{
  "manifest_version": 3,
  "name": "Friction",
  "version": "0.1",

  "description": "Remove some frictionless features of modern web apps.",

  "icons": {
    "48": "icons/error-med-48.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.reddit.com/*",
        "*://*.linkedin.com/*",
        "*://*.stackexchange.com/*",
        "*://*.stackoverflow.com/*"
      ],
      "js": ["feedEater.js"]
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["finiteScroll.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["fetch.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
